extends layout

block content
  div.list-block
    h1= title
    div(class="list-group list-group-light")
      ul
        each greenhouse in greenhouse_list
          li(class="list-group-item list-group-item-action px-3")
            a(href=greenhouse.url) #{greenhouse.name}
            |  (#{greenhouse.location})

        else
          li No existen invernaderos.
